function stitch(Im1, Im2, V)
% assumes Im1 is to the left of Im2

s1 = size(Im1);
if V(1) > 0 
%     Im1(V(1):end, V(2):end) = 0;
end
if V(1) < 0
    Va = abs(V);
    Im1(1:(s1(1) -Va(1) + 1), Va(2):end) = 0;    
end

col = s1(1) + V(1);
row = s1(2) + V(2);
joint = zeros(col,row);
joint = uint16(joint);
% joint = uint8(joint);
if V(1) > 0 
    joint(1:s1(1), 1:s1(2)) = Im1(1:end,1:end);

    imshow(joint)
end
if V(1) < 0 
    for i = 1:s1(1)
        for j = 1:s1(2)
            joint(i,j) = Im1(i,j);
        end
    end
    S = size(joint);
    for i = V(1):S(1)
        for j = V(2):S(2)
%             joint(i,j) = Im2(i-V(1),j-V(2));%%%%%%%%%add herrerere
        end
    end
%   joint(1:s1(1), 1:s1(2)) = Im1(1:end,1:end);
    imshow(Im1)
    figure
    imshow(joint)
end
